{
  "manifest_version": 3,
  "name": "One-Click Tab Round Up",
  "version": "0.0.1",
  "description": "In one click, merge your tabs into one window, sort them, and if they're crowded, group them.",
  "icons": {
    "48": "images/herd-icon-48.png",
    "128": "images/herd-icon-128.png",
    "676": "images/herd-icon-676.png"
  },
  "action": {
    "default_title": "Click to organize your tabs"
  },
  "host_permissions": ["https://*/*"],
  "permissions": ["tabGroups", "tabs"],
  "background": {
    "service_worker": "background.js"
  }
}
